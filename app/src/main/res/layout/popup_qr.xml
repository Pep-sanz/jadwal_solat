<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/qrSettingBackgroundColor"
    android:theme="@style/ThemeOverlay.JadwalShalat.QrSettingContainer"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_deviceIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device ID: Loading..."
        android:textSize="18sp"
        android:textColor="?attr/deviceIdTextColor"
        android:layout_marginBottom="16dp" />
    <ImageView
        android:id="@+id/popup_qrImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/popup_refresh_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Refresh Data"
        android:visibility="invisible"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>