<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Efek blur dan transparan -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#D6000000" /> <!-- Putih transparan (50%) -->
    </shape>
  </item>

  <!-- Highlight atas untuk efek kaca -->
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:angle="90"
          android:startColor="#09000000"
          android:endColor="#00FFFFFF" />
    </shape>
  </item>

  <!-- Shadow bawah untuk efek floating -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#10000000" />
    </shape>
    <padding android:top="4dp" android:left="2dp" android:right="2dp" android:bottom="6dp"/>
  </item>

</layer-list>
